<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tailor_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tailorscom.fred.tailorscom.tailorGallery_package.TailorGalleryActivity">

    <ImageView
        android:id="@+id/no_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/no_image_found"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/users_gallery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search criteria" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerTailorsGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>
